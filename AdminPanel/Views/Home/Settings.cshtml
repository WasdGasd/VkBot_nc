<style>
    .status-card {
        transition: all 0.3s ease;
        border-left: 4px solid #0d6efd;
    }

        .status-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .status-badge {
        font-size: 0.9em;
        padding: 0.25em 0.6em;
    }

    .command-item {
        border-left: 3px solid transparent;
        transition: all 0.2s ease;
    }

        .command-item:hover {
            border-left-color: #0d6efd;
            background-color: #f8f9fa;
        }

    .command-text {
        font-size: 0.9em;
        color: #6c757d;
        line-height: 1.4;
    }

    .stats-value {
        font-size: 1.5rem;
        font-weight: bold;
        color: #0d6efd;
    }

    .stats-label {
        font-size: 0.85rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-switch .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }

    .pagination .page-link {
        border-radius: 4px;
        margin: 0 2px;
    }

    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
</style>

@section Scripts {
    <script>
                // Состояние приложения
                let appState = {
                    botStatus: null,
                    settings: null,
                    commands: [],
                    currentPage: 1,
                    pageSize: 10,
                    totalPages: 1,
                    totalCommands: 0,
                    searchTerm: '',
                    searchTimeout: null,
                    isLoading: false,
                    databaseInfo: null
                };

                // ==================== ИНИЦИАЛИЗАЦИЯ ====================

                async function initializePage() {
                    try {
                        await Promise.all([
                            loadRealStatus(),
                            loadSettings(),
                            loadCommands(),
                            loadDatabaseInfo()
                        ]);

                        // Автоматическое обновление статуса каждые 10 секунд
                        setInterval(loadRealStatus, 10000);

                        // Обновляем счетчик символов
                        document.getElementById('commandResponse').addEventListener('input', updateResponseCounter);

                        showNotification('✅ Панель управления загружена', 'success');

                    } catch (error) {
                        console.error('Ошибка инициализации:', error);
                        showNotification('❌ Ошибка загрузки данных', 'danger');
                    }
                }

                // ==================== РЕАЛЬНЫЙ СТАТУС СИСТЕМЫ ====================

                async function loadRealStatus() {
                    try {
                        const response = await fetch('/api/commands/bot-info');
                        const result = await response.json();

                        if (result.success) {
                            appState.botStatus = result.data;
                            renderRealStatus();

                            // Обновляем кнопки управления
                            updateControlButtons(result.data.isRunning);
                        } else {
                            renderFallbackStatus();
                        }
                    } catch (error) {
                        console.error('Ошибка загрузки статуса:', error);
                        renderFallbackStatus();
                    }
                }

                function renderRealStatus() {
                    const container = document.getElementById('statusContainer');
                    if (!appState.botStatus || !container) return;

                    const status = appState.botStatus;
                    const isRunning = status.isRunning;
                    const uptime = formatUptime(status.uptime || 0);
                    const dbInfo = status.databaseInfo || {};

                    const statusColor = isRunning ? 'success' : 'danger';
                    const statusText = isRunning ? '🟢 Запущен' : '🔴 Остановлен';

                    container.innerHTML = `
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card status-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="stats-label">Статус бота</span>
                                            <span class="badge bg-${statusColor} status-badge">${statusText}</span>
                                        </div>
                                        <div class="stats-value">${status.botName || 'VK Бот'}</div>
                                        <small class="text-muted">PID: ${status.processId || 'не запущен'}</small>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="card status-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="stats-label">Время работы</span>
                                            <i class="bi bi-clock"></i>
                                        </div>
                                        <div class="stats-value">${uptime}</div>
                                        <small class="text-muted">Статус: ${getStatusText(status.overallStatus)}</small>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="card status-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="stats-label">База данных</span>
                                            <i class="bi bi-database"></i>
                                        </div>
                                        <div class="stats-value">${dbInfo.commandsCount || 0} команд</div>
                                        <small class="text-muted">${dbInfo.exists ? '✅ Доступна' : '❌ Не найдена'}</small>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="card status-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="stats-label">API подключение</span>
                                            <i class="bi bi-plug"></i>
                                        </div>
                                        <div class="stats-value">${status.apiStatus ? '✅ Активно' : '❌ Не активно'}</div>
                                        <small class="text-muted">Версия: ${status.version || '1.0.0'}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                }

                function renderFallbackStatus() {
                    const container = document.getElementById('statusContainer');
                    if (!container) return;

                    container.innerHTML = `
                        <div class="alert alert-warning">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="bi bi-exclamation-triangle fs-4"></i>
                                </div>
                                <div>
                                    <h6>⚠️ Не удалось подключиться к боту</h6>
                                    <p class="mb-2">Возможные причины:</p>
                                    <ul class="mb-2">
                                        <li>Бот не запущен</li>
                                        <li>База данных недоступна</li>
                                        <li>Проблемы с сетью</li>
                                    </ul>
                                    <button class="btn btn-sm btn-primary" onclick="refreshAll()">
                                        <i class="bi bi-arrow-clockwise"></i> Попробовать снова
                                    </button>
                                    <button class="btn btn-sm btn-success" onclick="startBot()">
                                        <i class="bi bi-play-fill"></i> Запустить бот
                                    </button>
                                </div>
                            </div>
                        </div>
                    `;
                }

                function getStatusText(status) {
                    const statusMap = {
                        'running': 'Работает',
                        'stopped': 'Остановлен',
                        'starting': 'Запускается',
                        'crashed': 'Аварийно завершен',
                        'error': 'Ошибка',
                        'unknown': 'Неизвестно'
                    };
                    return statusMap[status] || status;
                }

                function updateControlButtons(isRunning) {
                    const startBtn = document.getElementById('startBotBtn');
                    const stopBtn = document.getElementById('stopBotBtn');

                    if (startBtn) {
                        startBtn.disabled = isRunning;
                        startBtn.innerHTML = isRunning
                            ? '<i class="bi bi-check-circle"></i> Бот запущен'
                            : '<i class="bi bi-play-fill"></i> Запустить бота';
                    }

                    if (stopBtn) {
                        stopBtn.disabled = !isRunning;
                        stopBtn.innerHTML = !isRunning
                            ? '<i class="bi bi-stop-fill"></i> Бот остановлен'
                            : '<i class="bi bi-stop-fill"></i> Остановить бота';
                    }
                }

                // ==================== НАСТРОЙКИ ====================

                async function loadSettings() {
                    try {
                        const response = await fetch('/api/commands/settings');
                        const result = await response.json();

                        if (result.success && result.data) {
                            appState.settings = result.data;
                            renderSettings();
                        } else {
                            // Используем настройки по умолчанию
                            appState.settings = {
                                botName: 'VK Бот',
                                vkToken: '',
                                groupId: '',
                                autoStart: true,
                                notifyNewUsers: true,
                                notifyErrors: true,
                                notifyEmail: ''
                            };
                            renderSettings();
                        }
                    } catch (error) {
                        console.error('Ошибка загрузки настроек:', error);
                    }
                }

                function renderSettings() {
                    if (!appState.settings) return;

                    const settings = appState.settings;

                    document.getElementById('botName').value = settings.botName || 'VK Бот';
                    document.getElementById('vkToken').value = settings.vkToken || '';
                    document.getElementById('groupId').value = settings.groupId || '';
                    document.getElementById('autoStart').checked = settings.autoStart || false;
                    document.getElementById('notifyNewUsers').checked = settings.notifyNewUsers || true;
                    document.getElementById('notifyErrors').checked = settings.notifyErrors || true;
                    document.getElementById('notifyEmail').value = settings.notifyEmail || '';
                }

                async function saveSettings() {
                    if (appState.isLoading) return;

                    const settings = {
                        botName: document.getElementById('botName').value.trim(),
                        vkToken: document.getElementById('vkToken').value.trim(),
                        groupId: document.getElementById('groupId').value.trim(),
                        autoStart: document.getElementById('autoStart').checked,
                        notifyNewUsers: document.getElementById('notifyNewUsers').checked,
                        notifyErrors: document.getElementById('notifyErrors').checked,

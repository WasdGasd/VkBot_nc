</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <script>
        // Состояние приложения
        let appState = {
            botStatus: null,
            settings: null,
            commands: [],
            currentPage: 1,
            pageSize: 10,
            totalPages: 1,
            totalCommands: 0,
            searchTerm: '',
            searchTimeout: null,
            isLoading: false,
            databaseInfo: null,
            isOperationInProgress: false
        };

        // ==================== ИНИЦИАЛИЗАЦИЯ ====================

        async function initializePage() {
            console.log('initializePage вызывается');
            try {
                await Promise.all([
                    loadRealStatus(),
                    loadSettings(),
                    loadCommands(),
                    loadDatabaseInfo()
                ]);

                // Автоматическое обновление статуса каждые 10 секунд
                setInterval(loadRealStatus, 10000);

                // Обновляем счетчик символов
                const responseInput = document.getElementById('commandResponse');
                if (responseInput) {
                    responseInput.addEventListener('input', updateResponseCounter);
                }

                // Инициализация модального окна остановки
                initStopDialog();

                showNotification(' Панель управления загружена', 'success');

            } catch (error) {
                console.error('Ошибка инициализации:', error);
                showNotification(' Ошибка загрузки данных', 'danger');
            }
        }

        function initStopDialog() {
            const safeStopBtn = document.getElementById('safeStopBtn');
            const forceStopBtn = document.getElementById('forceStopBtnModal');

            if (safeStopBtn) {
                safeStopBtn.addEventListener('click', () => {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('stopDialogModal'));
                    if (modal) modal.hide();
                    safeStopBot();
                });
            }

            if (forceStopBtn) {
                forceStopBtn.addEventListener('click', () => {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('stopDialogModal'));
                    if (modal) modal.hide();
                    forceStopBot();
                });
            }
        }

        // ==================== РЕАЛЬНЫЙ СТАТУС СИСТЕМЫ ====================

        async function loadRealStatus() {
            try {
                const response = await fetch('/api/commands/bot-info');
                const result = await response.json();

                if (result.success) {
                    appState.botStatus = result.data;
                    renderRealStatus();

                    // Обновляем кнопки управления
                    updateControlButtons(result.data.isRunning);
                } else {
                    renderFallbackStatus();
                }
            } catch (error) {
                console.error('Ошибка загрузки статуса:', error);
                renderFallbackStatus();
            }
        }

        function renderRealStatus() {
            const container = document.getElementById('statusContainer');
            if (!appState.botStatus || !container) return;

            const status = appState.botStatus;
            const isRunning = status.isRunning;
            const uptime = formatUptime(status.uptime || 0);
            const dbInfo = status.databaseInfo || {};

            const statusColor = isRunning ? 'success' : 'danger';
            const statusText = isRunning ? '🟢 Запущен' : '🔴 Остановлен';

            container.innerHTML = `
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card status-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="stats-label">Статус бота</span>
                                    <span class="badge bg-${statusColor} status-badge">${statusText}</span>
                                </div>
                                <div class="stats-value">${status.botName || 'VK Бот'}</div>
                                <small class="text-muted">PID: ${status.processId || 'не запущен'}</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="card status-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="stats-label">Время работы</span>
                                    <i class="bi bi-clock"></i>
                                </div>
                                <div class="stats-value">${uptime}</div>
                                <small class="text-muted">Статус: ${getStatusText(status.overallStatus)}</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="card status-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="stats-label">База данных</span>
                                    <i class="bi bi-database"></i>
                                </div>
                                <div class="stats-value">${dbInfo.commandsCount || 0} команд</div>
                                <small class="text-muted">${dbInfo.exists ? '✅ Доступна' : '❌ Не найдена'}</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="card status-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="stats-label">API подключение</span>
                                    <i class="bi bi-plug"></i>
                                </div>
                                <div class="stats-value">${status.apiStatus ? '✅ Активно' : '❌ Не активно'}</div>
                                <small class="text-muted">Версия: ${status.version || '1.0.0'}</small>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        function renderFallbackStatus() {
            const container = document.getElementById('statusContainer');
            if (!container) return;

            container.innerHTML = `
                <div class="alert alert-warning">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-exclamation-triangle fs-4"></i>
                        </div>
                        <div>
                            <h6>⚠️ Не удалось подключиться к боту</h6>
                            <p class="mb-2">Возможные причины:</p>

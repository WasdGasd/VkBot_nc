﻿@{
ViewData["Title"] = "Настройки";
}

<div class="container-fluid">
    <!-- Шапка с состоянием системы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="mb-1">⚙️ Настройки бота</h2>
                            <p class="text-muted mb-0">Управление настройками и состоянием бота</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="d-flex justify-content-end gap-2">
                                <button class="btn btn-primary" onclick="saveSettings()">
                                    <i class="bi bi-save"></i> Сохранить все
                                </button>
                                <button class="btn btn-outline-light" onclick="refreshAll()">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Левая колонка -->
        <div class="col-lg-6">
            <!-- Панель состояния -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">📊 Состояние системы</h5>
                    <button class="btn btn-sm btn-light" onclick="refreshStatus()">
                        <i class="bi bi-arrow-clockwise"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div id="statusContainer">
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2 text-muted">Загрузка состояния...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Основные настройки -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">🔧 Основные настройки</h5>
                </div>
                <div class="card-body">
                    <form id="mainSettingsForm">
                        <div class="mb-3">
                            <label class="form-label">Название бота <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="botName" required
                                   placeholder="Введите название бота" maxlength="100">
                            <div class="form-text">Отображаемое имя бота</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Токен VK API</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="vkToken"
                                       placeholder="Введите токен VK API" maxlength="200">
                                <button class="btn btn-outline-secondary" type="button"
                                        onclick="toggleTokenVisibility()">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <div class="form-text">Токен доступа к VK API (минимальная длина: 20 символов)</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">ID группы VK</label>
                            <input type="text" class="form-control" id="groupId"
                                   placeholder="Введите ID группы" pattern="[0-9]+">
                            <div class="form-text">Числовой идентификатор группы VK</div>
                        </div>

                        <div class="mb-3 form-check form-switch">
                            <input type="checkbox" class="form-check-input" id="autoStart">
                            <label class="form-check-label" for="autoStart">Автозапуск бота при старте системы</label>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Настройки уведомлений -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">🔔 Уведомления</h5>
                </div>
                <div class="card-body">
                    <form id="notificationSettingsForm">
                        <div class="mb-3 form-check form-switch">
                            <input type="checkbox" class="form-check-input" id="notifyNewUsers">
                            <label class="form-check-label" for="notifyNewUsers">Уведомлять о новых пользователях</label>
                        </div>

                        <div class="mb-3 form-check form-switch">
                            <input type="checkbox" class="form-check-input" id="notifyErrors">
                            <label class="form-check-label" for="notifyErrors">Уведомлять об ошибках работы бота</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email для уведомлений</label>
                            <input type="email" class="form-control" id="notifyEmail"
                                   placeholder="email@example.com">
                            <div class="form-text">На этот email будут отправляться уведомления</div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Правая колонка -->
        <div class="col-lg-6">
            <!-- Управление командами -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">💬 Управление командами</h5>
                    <div class="btn-group">
                        <button class="btn btn-sm btn-success" onclick="showAddCommandModal()">
                            <i class="bi bi-plus-circle"></i> Добавить
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="loadCommands()">
                            <i class="bi bi-arrow-clockwise"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" id="searchCommands"
                                   placeholder="Поиск по названию, триггерам или ответу..."
                                   onkeyup="debounceSearch()">
                            <button class="btn btn-outline-secondary" type="button" onclick="clearSearch()">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </div>
                    </div>

                    <div id="commandsContainer" class="mt-3" style="max-height: 400px; overflow-y: auto;">
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2 text-muted">Загрузка команд...</p>
                        </div>
                    </div>

                    <div class="mt-3">
                        <nav aria-label="Навигация по командам">
                            <ul class="pagination pagination-sm justify-content-center" id="commandsPagination">
                            </ul>
                        </nav>
                    </div>

                    <div class="mt-3 d-flex flex-wrap gap-2">
                        <button class="btn btn-sm btn-outline-info" onclick="checkDbConnection()">
                            <i class="bi bi-database"></i> Проверить БД
                        </button>
                        <button class="btn btn-sm btn-outline-warning" onclick="initTable()">
                            <i class="bi bi-database-add"></i> Создать таблицу
                        </button>
                        <button class="btn btn-sm btn-outline-primary" onclick="migrateDatabase()">
                            <i class="bi bi-database-up"></i> Миграция БД
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="recreateDatabase()">
                            <i class="bi bi-database-fill-exclamation"></i> Пересоздать БД
                        </button>
                        <button class="btn btn-sm btn-outline-success" onclick="addDemoCommands()">
                            <i class="bi bi-magic"></i> Демо-команды
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="clearAllCommands()">
                            <i class="bi bi-trash"></i> Очистить все
                        </button>
                    </div>
                </div>
            </div>

            <!-- Управление ботом -->
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">🎮 Управление ботом</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted mb-3">Управление состоянием и поведением бота</p>

                        <div class="d-grid gap-2">
                            <button class="btn btn-lg btn-success" onclick="startBot()" id="startBotBtn">
                                <i class="bi bi-play-fill"></i> Запустить бота
                            </button>

                            <div class="row mt-2">
                                <div class="col-6">
                                    <button class="btn btn-warning w-100" onclick="resetSettings()">
                                        <i class="bi bi-arrow-counterclockwise"></i> Сбросить настройки
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-danger w-100" onclick="stopBot()" id="stopBotBtn">
                                        <i class="bi bi-stop-fill"></i> Остановить бота
                                    </button>
                                </div>
                            </div>

                            <div class="mt-3">
                                <button class="btn btn-outline-info w-100" onclick="testBotConnection()">
                                    <i class="bi bi-plug"></i> Проверить подключение
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно команды -->
<div class="modal fade" id="commandModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Добавление команды</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="commandForm" novalidate>
                    <input type="hidden" id="commandId">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Название команды <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="commandName" required
                                       maxlength="100" placeholder="Например: Помощь">
                                <div class="invalid-feedback">Введите название команды</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Тип команды</label>
                                <select class="form-select" id="commandType">
                                    <option value="text">📝 Текстовая</option>
                                    <option value="menu">📋 Меню (с кнопками)</option>
                                    <option value="admin">🔧 Административная</option>
                                    <option value="info">ℹ️ Информационная</option>
                                    <option value="system">⚙️ Системная</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Триггеры <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="commandTriggers" required
                               placeholder="помощь,справка,help" maxlength="500">
                        <div class="form-text">Ключевые слова через запятую, которые активируют команду</div>
                        <div class="invalid-feedback">Введите хотя бы один триггер</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ответ <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="commandResponse" rows="5" required
                                  maxlength="4000" placeholder="Текст который получит пользователь..."></textarea>
                        <div class="form-text d-flex justify-content-between">
                            <span>Текст ответа команды</span>
                            <span id="responseCounter">0/4000</span>
                        </div>
                        <div class="invalid-feedback">Введите текст ответа</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">JSON клавиатуры (опционально)</label>
                        <textarea class="form-control font-monospace" id="commandKeyboard" rows="3"
                                  placeholder='{"inline": false, "buttons": [[{"action": {"type": "text", "label": "Кнопка"}}]]}'></textarea>
                        <div class="form-text">
                            В формате JSON для создания клавиатуры.
                            <a href="#" onclick="showKeyboardExamples()">Примеры</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="saveCommand()" id="saveCommandBtn">
                    Сохранить
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно примеров клавиатуры -->

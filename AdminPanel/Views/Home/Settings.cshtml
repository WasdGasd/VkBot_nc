@{
    ViewData["Title"] = "Настройки";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">
                <i class="bi bi-gear me-2"></i>@ViewData["Title"]
            </h1>
            <p class="text-muted mb-0">Управление ботом, настройки и команды</p>
        </div>
    </div>

    <!-- Уведомления -->
    <div id="notificationContainer"></div>

    <!-- Статус системы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Статус системы
                    </h5>
                </div>
                <div class="card-body">
                    <div id="statusContainer">
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2 text-muted">Загрузка статуса...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Управление ботом -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-robot me-2"></i>Управление ботом
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        <button id="startBotBtn" class="btn btn-success" onclick="startBot()">
                            <i class="bi bi-play-fill"></i> Запустить бота
                        </button>
                        <button id="stopBotBtn" class="btn btn-danger" onclick="showStopDialog()">
                            <i class="bi bi-stop-fill"></i> Остановить бота
                        </button>
                        <button id="restartBotBtn" class="btn btn-warning" onclick="restartBot()">
                            <i class="bi bi-arrow-repeat"></i> Перезапустить
                        </button>
                        <button id="forceStopBtn" class="btn btn-outline-danger" onclick="forceStopBot()">
                            <i class="bi bi-x-octagon"></i> Принудительная остановка
                        </button>
                        <button class="btn btn-info" onclick="getBotDetails()">
                            <i class="bi bi-info-circle"></i> Детали
                        </button>
                        <button class="btn btn-outline-primary" onclick="testBotConnection()">
                            <i class="bi bi-plug"></i> Проверить соединение
                        </button>
                        <button class="btn btn-outline-secondary" onclick="refreshStatus()">
                            <i class="bi bi-arrow-clockwise"></i> Обновить статус
                        </button>
                    </div>

                    <!-- Информация о способах остановки -->
                    <div class="alert alert-info">
                        <small>
                            <i class="bi bi-info-circle"></i>
                            <strong>Безопасная остановка</strong> позволяет боту корректно завершить операции (до 30 секунд).
                            <strong>Принудительная остановка</strong> используется только при проблемах с безопасной остановкой.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Настройки -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-sliders me-2"></i>Настройки бота
                    </h5>
                </div>
                <div class="card-body">
                    <form id="settingsForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="botName" class="form-label">Название бота</label>
                                <input type="text" class="form-control" id="botName" placeholder="Мой VK Бот">
                            </div>

                            <div class="col-md-6">
                                <label for="groupId" class="form-label">ID группы VK</label>
                                <input type="text" class="form-control" id="groupId" placeholder="123456789">
                            </div>

                            <div class="col-md-12">
                                <label for="vkToken" class="form-label">Токен VK API</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="vkToken"
                                           placeholder="Введите токен доступа VK API">
                                    <button class="btn btn-outline-secondary" type="button"
                                            onclick="toggleTokenVisibility()">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                                <small class="text-muted">
                                    Токен должен иметь права: messages, groups, photos
                                </small>
                            </div>

                            <div class="col-md-6">
                                <label for="notifyEmail" class="form-label">Email для уведомлений</label>
                                <input type="email" class="form-control" id="notifyEmail"
                                       placeholder="admin@example.com">
                            </div>

                            <div class="col-md-12">
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="autoStart">
                                    <label class="form-check-label" for="autoStart">
                                        Автозапуск бота при старте системы
                                    </label>
                                </div>

                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="notifyNewUsers" checked>
                                    <label class="form-check-label" for="notifyNewUsers">
                                        Уведомлять о новых пользователях
                                    </label>
                                </div>

                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="notifyErrors" checked>
                                    <label class="form-check-label" for="notifyErrors">
                                        Уведомлять об ошибках
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="button" class="btn btn-primary" onclick="saveSettings()">
                                <i class="bi bi-save"></i> Сохранить все
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="loadSettings()">
                                <i class="bi bi-arrow-clockwise"></i> Обновить
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Команды -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-terminal me-2"></i>Команды бота
                        </h5>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success btn-sm" onclick="showAddCommandModal()">
                                <i class="bi bi-plus-circle"></i> Добавить команду
                            </button>
                            <button class="btn btn-outline-warning btn-sm" onclick="addDemoCommands()">
                                <i class="bi bi-magic"></i> Демо-команды
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Поиск -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchCommands"
                                       placeholder="Поиск команд..." oninput="debounceSearch()">
                                <button class="btn btn-outline-secondary" type="button" onclick="clearSearch()">
                                    <i class="bi bi-x-circle"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="btn-group">
                                <button class="btn btn-outline-info btn-sm" onclick="initTable()">
                                    <i class="bi bi-database-add"></i> Проверить таблицы
                                </button>
                                <button class="btn btn-outline-danger btn-sm" onclick="clearAllCommands()">
                                    <i class="bi bi-trash"></i> Очистить все
                                </button>
                                <button class="btn btn-outline-warning btn-sm" onclick="migrateDatabase()">
                                    <i class="bi bi-arrow-up-circle"></i> Миграция БД
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Список команд -->
                    <div id="commandsContainer">
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2 text-muted">Загрузка команд...</p>
                        </div>
                    </div>

                    <!-- Пагинация -->
                    <nav aria-label="Навигация по командам" class="mt-3">
                        <ul id="commandsPagination" class="pagination justify-content-center">
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- База данных -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-database me-2"></i>База данных
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-database fs-1 text-primary mb-2"></i>
                                    <h5 id="dbCommandsCount">0</h5>
                                    <p class="text-muted mb-0">Команд в БД</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="d-flex flex-wrap gap-2">
                                <button class="btn btn-outline-primary" onclick="checkDbConnection()">
                                    <i class="bi bi-database-check"></i> Проверить подключение
                                </button>
                                <button class="btn btn-outline-success" onclick="initTable()">
                                    <i class="bi bi-database-add"></i> Инициализировать БД
                                </button>
                                <button class="btn btn-outline-warning" onclick="migrateDatabase()">
                                    <i class="bi bi-arrow-up-circle"></i> Выполнить миграцию
                                </button>
                                <button class="btn btn-outline-danger" onclick="recreateDatabase()">
                                    <i class="bi bi-database-fill-gear"></i> Пересоздать БД
                                </button>
                            </div>

                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i>
                                    Последнее обновление: <span id="dbLastUpdated">никогда</span>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно для команд -->
<div class="modal fade" id="commandModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Добавление команды</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                <form id="commandForm" class="needs-validation" novalidate>
                    <input type="hidden" id="commandId">

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="commandName" class="form-label">Название команды *</label>
                            <input type="text" class="form-control" id="commandName" required>
                            <div class="invalid-feedback">Введите название команды</div>
                        </div>

                        <div class="col-md-6">
                            <label for="commandType" class="form-label">Тип команды</label>
                            <select class="form-select" id="commandType">
                                <option value="text" selected>Текст</option>
                                <option value="menu">Меню</option>
                                <option value="info">Информация</option>
                                <option value="admin">Административная</option>
                                <option value="system">Системная</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <label for="commandTriggers" class="form-label">Триггеры (через запятую) *</label>
                            <input type="text" class="form-control" id="commandTriggers"
                                   placeholder="привет,здравствуй,хай,hello" required>
                            <div class="invalid-feedback">Введите хотя бы один триггер</div>
                            <small class="text-muted">Слова или фразы, на которые будет реагировать бот</small>
                        </div>

                        <div class="col-12">
                            <label for="commandResponse" class="form-label">Ответ команды *</label>
                            <textarea class="form-control" id="commandResponse" rows="5"
                                      placeholder="Привет! Я бот, который поможет вам..."
                                      required maxlength="4000"></textarea>
                            <div class="invalid-feedback">Введите текст ответа</div>
                            <div class="d-flex justify-content-between mt-1">
                                <small class="text-muted">Можно использовать переносы строк и форматирование</small>
                                <small id="responseCounter" class="form-text text-muted">0/4000</small>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="commandKeyboard" class="form-label">Клавиатура (JSON)</label>
                            <textarea class="form-control" id="commandKeyboard" rows="3"
                                      placeholder='{"inline": false, "buttons": [[{"action": {"type": "text", "label": "Кнопка 1", "payload": ""}, "color": "primary"}]]}'>
                            </textarea>
                            <small class="text-muted">
                                Необязательно. Формат VK клавиатуры.
                                <a href="#" onclick="return showKeyboardExamples()">Примеры</a>
                            </small>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" id="saveCommandBtn" onclick="saveCommand()">
                    Сохранить
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно выбора типа остановки -->
<div class="modal fade" id="stopDialogModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Выберите способ остановки</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Выберите предпочтительный способ остановки бота
                </div>

                <div class="list-group mb-3">
                    <button type="button" class="list-group-item list-group-item-action" id="safeStopBtn">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">🛑 Безопасная остановка</h6>
                            <small class="text-success">Рекомендуется</small>
                        </div>
                        <p class="mb-1">Бот корректно завершит текущие операции и сохранит данные</p>
                        <small>Время: до 30 секунд</small>
                    </button>

                    <button type="button" class="list-group-item list-group-item-action" id="forceStopBtnModal">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">⚠️ Принудительная остановка</h6>
                            <small class="text-warning">Только при проблемах</small>
                        </div>
                        <p class="mb-1">Немедленное завершение всех процессов без сохранения</p>
                        <small class="text-danger">Может привести к потере данных!</small>
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно с примерами клавиатур -->
<div class="modal fade" id="keyboardExamplesModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Примеры клавиатур VK</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <h6>Простая клавиатура:</h6>
                    <pre class="bg-light p-3 rounded"><code>{
  "inline": false,
  "buttons": [
    [
      {
        "action": {
          "type": "text",
          "label": "Кнопка 1",
          "payload": ""
        },
        "color": "primary"
      },
      {
        "action": {
          "type": "text",
          "label": "Кнопка 2",
          "payload": ""
        },
        "color": "secondary"
      }
    ]
  ]
}</code></pre>
                </div>

                <div class="mb-3">
                    <h6>Inline клавиатура:</h6>

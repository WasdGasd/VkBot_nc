        async function monitorBotStartup() {
            showNotification('⏳ Мониторинг запуска бота...', 'info');

            let attempts = 0;
            const maxAttempts = 30; // 30 секунд

            const checkInterval = setInterval(async () => {
                attempts++;

                try {
                    await loadRealStatus();

                    if (appState.botStatus && appState.botStatus.isRunning && appState.botStatus.apiStatus) {
                        clearInterval(checkInterval);
                        showNotification('✅ Бот успешно запущен и отвечает на запросы', 'success');
                        updateControlButtons(true);
                    } else if (attempts >= maxAttempts) {
                        clearInterval(checkInterval);
                        showNotification('⚠️ Бот запущен, но API не отвечает', 'warning');
                        updateControlButtons(true);
                    }
                } catch (error) {
                    // Игнорируем ошибки при мониторинге
                }
            }, 1000);
        }

        async function monitorBotShutdown() {
            showNotification('⏳ Мониторинг остановки бота...', 'info');

            let attempts = 0;
            const maxAttempts = 15; // 15 секунд

            const checkInterval = setInterval(async () => {
                attempts++;

                try {
                    await loadRealStatus();

                    if (appState.botStatus && !appState.botStatus.isRunning) {
                        clearInterval(checkInterval);
                        showNotification('✅ Бот успешно остановлен', 'success');
                        updateControlButtons(false);
                    } else if (attempts >= maxAttempts) {
                        clearInterval(checkInterval);
                        showNotification('⚠️ Бот все еще запущен после попытки остановки', 'warning');
                        updateControlButtons(true);
                    }
                } catch (error) {
                    // Игнорируем ошибки при мониторинге
                }
            }, 1000);
        }


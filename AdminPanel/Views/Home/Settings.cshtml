                    <a class="page-link" href="#" onclick="loadCommands(${current - 1})" aria-label="Предыдущая">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            `;

            // Номера страниц
            let startPage = Math.max(1, current - Math.floor(maxVisible / 2));
            let endPage = Math.min(total, startPage + maxVisible - 1);

            if (endPage - startPage + 1 < maxVisible) {
                startPage = Math.max(1, endPage - maxVisible + 1);
            }

            for (let i = startPage; i <= endPage; i++) {
                html += `
                    <li class="page-item ${i === current ? 'active' : ''}">
                        <a class="page-link" href="#" onclick="loadCommands(${i})">${i}</a>
                    </li>
                `;
            }

            // Кнопка "Вперед"
            html += `
                <li class="page-item ${current === total ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="loadCommands(${current + 1})" aria-label="Следующая">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            `;

            // Информация о странице
            html += `
                <li class="page-item disabled">
                    <span class="page-link text-muted">
                        ${current} / ${total} (всего: ${appState.totalCommands})
                    </span>
                </li>
            `;

            pagination.innerHTML = html;
        }

